{
    "compilerOptions": {
        "rootDir": "./src",
        "target": "ES6",
        "types": ["bun-types"],
        "moduleResolution": "node",
        "alwaysStrict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "removeComments": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noUncheckedIndexedAccess": true,
    },
    "include": ["**/*.ts"]
}